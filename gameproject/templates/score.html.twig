{% extends "layout.html.twig" %}

{% block title "Inscription" %}
    
{% block content %}
<div class="container">
    <h1>Meilleurs scores</h1>
    
    
    <table class="table">
        <tr>
            <th>Pseudo</th>
            <th>Score</th>
            <th>Action</th>
        </tr>
        
        {% for membre in membres %}
        <tr>
            <td>{{ membre.pseudo }}</td>
            <td>{{ membre.score }}</td>
            <td><a href="{{ path('admin_reset_score',{id:membre.id_membre}) }}">Supprimer</a></td>
        </tr>
        {% endfor %}
    </table>
</div>
    
{% endblock %}
