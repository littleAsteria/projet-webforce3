{% extends "layout.html.twig" %}

{% block content %}
    
    
     
    
    
    <div class="container">
        <div class="row">
            {# On affiche un message si un joueur n'est pas connecté#}
            {% if not membre_manager.membre %}
                <p class='alert alert-danger col-md-2 col-md-offset-4'>Attention, si vous n'êtes pas connecté votre score ne sera pas sauvegardé!</p>
            {% endif %}
        </div>
        
        <div class="row">
            <h1 class="col-md-2 col-md-offset-4 col-xs-6 col-xs-offset-3" id="mainTitle">Politismos Quiz</h1>
        </div>
        {# essais #}
       
        {# fin de l'essai #}
    
        <div class="row">
            <a href="{{ path('game') }}" class="btn btn-primary col-md-2 col-md-offset-4 margin-top-5 col-xs-6 col-xs-offset-3" role="button">Jouer</a>
        </div>
        
        <div class="row">
            <a href="{{ path('regles') }}" class="btn btn-primary col-md-2 col-md-offset-4 margin-top-5 col-xs-6 col-xs-offset-3" role="button">Règles du jeu</a>
        </div>
        
        <div class="row">
            <a href="{{ path('scores') }}" class="btn btn-primary col-md-2 col-md-offset-4 margin-top-5 col-xs-6 col-xs-offset-3" role="button">Scores</a>
        </div>
        
       
        {% if membre_manager.membre %}    
        <div class="row" >
            <a href="{{ path('soumission') }}" id="last-button" class="btn btn-primary col-md-2 col-md-offset-4 margin-top-5 col-xs-6 col-xs-offset-3" role="button">Proposer une question</a>
        </div>
        {% endif %}
        
        {% block javascript %}
            {{ parent() }}
            <script src="https://cdnjs.cloudflare.com/ajax/libs/howler/2.0.4/howler.core.min.js"></script>
            <script src="../assets/js/accueil.js"></script>
        {% endblock %}
    </div>
        
{% endblock %}
