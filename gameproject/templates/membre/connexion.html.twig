{% extends "layout.html.twig" %}

{% block title "Politismos Quiz : Connexion" %}
    
{% block content %}
    


<div class="container">
    <div class="row"><h1 class='col-md-2 col-md-offset-4'>Connexion</h1></div>
    <form method="post">
      <div class="form-group" id="form_connexion">
        <label for="pseudo">Pseudo</label>
        <input type="text" class="form-control" id="pseudo" name="pseudo" placeholder="Votre pseudo">
      </div>

      <div class="form-group">
        <label for="mdp">Mot de passe</label>
        <input type="password" class="form-control" id="mdp" name ="mdp" placeholder="Votre mot de passe">
      </div>

      <button type="submit" class="btn btn-primary">Se connecter</button>
    </form>
</div>
{% endblock %}



