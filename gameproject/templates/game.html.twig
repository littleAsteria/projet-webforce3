<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        
        <title>{% block title '' %} - Our game</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link href="{{ asset('assets/css/main.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ asset('assets/css/game.css') }}" rel="stylesheet" type="text/css" />
        {% endblock %}

    </head>
    <body>
        
            <div class="container">
                <a class="navbar-brand" href="{{ path('homepage') }}"><img id="home" src="{{ asset('assets/images/home.png') }}"></a>
            </div>
            
      
        <div class="container">
            <div class="row">
                <h1 class="col-md-12 col-md-offset-5">Nom du jeu</h1>
            </div>
            <div class="row">

                <h2 id="score" class="col-md-12 col-md-offset-5">Score :  0</h2>

            </div>
            <div class="row">
                
                <button id="joker1" type="button" class="jokerButton jokerButton-primary col-md-2 col-md-offset-2 margin-top-10" data-toggle="tooltip" data-placement="top" title="Changer de question">Switch</button>
                
                <button id="joker2" type="button" class="jokerButton jokerButton-primary col-md-2 col-md-offset-4 margin-top-10" data-toggle="tooltip" data-placement="top" title="enlever deux mauvaises réponses">50/50</button>
   
            </div>
            
            <div class="row">
                <h3 id="questionNumber" class="col-md-12 col-md-offset-3 margin-top-10">Question n°</h3>
            </div>
            
            <div class="row">
             <p id="questionText" class="col-md-12 col-md-offset-3">Texte de la question</p>
            </div>

            <div class="row">
                <button id="reponseA" class="reponseButton reponseButton-primary col-md-2 col-md-offset-2 margin-top-10">Réponse A</button>
                <button id="reponseB" class="reponseButton reponseButton-primary col-md-2 col-md-offset-4 margin-top-10">Réponse B</button>
            </div>
            
            <div class="row">
                <button id="reponseC" class="reponseButton reponseButton-primary col-md-2 col-md-offset-2 margin-top-10">Réponse C</button>
                <button id="reponseD" class="reponseButton reponseButton-primary col-md-2 col-md-offset-4 margin-top-10">Réponse D</button>
            </div>
            
            <div class="row">
                <button id="valider" class="validateButton validateButton-primary col-md-2 col-md-offset-5 margin-top-10 margin-bottom-10">Valider</button>
            </div>
        </div>
        {% block javascript %}
       {#récupérerer les liens sur bootstrap#}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
            <script>
                var path = '{{ path('randomQuestion') }}';
                var path2 = '{{ path("best-score") }}';
                var path3 = '{{ path('fin_de_partie') }}';
            </script>
            <script src="../assets/js/questionRequest.js"></script>
            <script src="../assets/js/game.js"></script>
            <script src="../assets/js/affichage-donnees.js"></script>
            <script src="../assets/js/score.js"></script>
            <script src="../assets/js/joker.js"></script>
            <script src="../assets/js/verificationReponses.js"></script>
            <script src="../assets/js/PostBestScore.js"></script>

        {% endblock %}
    </body>
</html>

