{% extends "layout.html.twig" %}

{% block title "Soumission" %}
    
{% block content %}
    
<div class="container">

    <form method="post">

        <div class="form-group">
            <label for="question">Entrer un texte de question : </label>
            <textarea class="form-control" id="question" name="question" placeholder="Votre question"></textarea>
        </div>

        <div class="form-group">
            <label for="reponseA">Entrer votre réponse A : </label>
            <input type="text" class="form-control" id="reponseA" name ="reponseA" placeholder="Votre réponse A">
        </div>

        <div class="form-group">
            <label for="reponseB">Entrer votre réponse B : </label>
            <input type="text" class="form-control" id="reponseB" name ="reponseB" placeholder="Votre réponse B">
        </div>

        <div class="form-group">
            <label for="reponseC">Entrer votre réponse C : </label>
            <input type="text" class="form-control" id="reponseC" name ="reponseC" placeholder="Votre réponse C">
        </div>

        <div class="form-group">
            <label for="reponseD">Entrer votre réponse D : </label>
            <input type="text" class="form-control" id="reponseD" name ="reponseD" placeholder="Votre réponse D">
        </div>

        <div class="form-group">
            <label for="reponse">Quelle est la bonne réponse ?</label>
            <select id="reponse" name="reponse">
                <option value="a" selected>Réponse A</option>
                <option value="b">Réponse B</option>
                <option value="c">Réponse C</option>
                <option value="d">Réponse D</option>
            </select>
        </div>

        <div class="form-group">
            <label for="difficulte">Quel est le niveau de difficulté de votre question ?</label>
            <select id="difficulte" name="difficulte">
                <option value="1" selected>1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
            </select>
        </div>

        <button type="submit" class="btn btn-default">Soumettre la question</button>
    </form>
    
</div>
    
{% endblock %}
